<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back"
                    android:textColor="#807D7D" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kahits Coffee SHop"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/genre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Category" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@android:color/white">

                <LinearLayout
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <Button
                        android:id="@+id/fantasy"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF9800"
                        android:backgroundTint="@color/black"
                        android:text="Hot"
                        android:padding="8dp" />

                    <Button
                        android:id="@+id/comedy"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:textColor="#FF9800"
                        android:text="Cold"
                        android:padding="8dp" />



                    <Button
                        android:id="@+id/darkFantasy"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:textColor="#FF9800"
                        android:text="Milktea"
                        android:padding="8dp" />

                    <Button
                        android:id="@+id/Adventure"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF9800"
                        android:backgroundTint="@color/black"
                        android:text="Toast"
                        android:padding="8dp" />



                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Milktea" />
            </LinearLayout>



            <!-- Product List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/onepieceCardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    tools:ignore="DuplicateSpeakableTextCheck">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="347dp"
                        android:layout_height="180dp"
                        android:layout_margin="8dp"
                        android:contentDescription="onepiecee">

                        <ImageView
                            android:id="@+id/onepiececover"
                            android:layout_width="164dp"
                            android:layout_height="164dp"
                            android:background="#FDFDFD"
                            android:contentDescription="@string/asdsa01123"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/winta"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/onepieceWishlist"
                            android:layout_width="32dp"
                            android:layout_height="29dp"
                            android:contentDescription="@string/wishlist"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.095"
                            app:srcCompat="@drawable/btn_3"
                            app:tint="@color/black"
                            tools:ignore="MissingConstraints,ImageContrastCheck" />

                        <TextView
                            android:id="@+id/onepiecePrice"
                            android:layout_width="71dp"
                            android:layout_height="39dp"
                            android:contentDescription="@string/pricetxt"
                            android:text="$49"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.614"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.081"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck,VisualLintOverlap" />


                        <TextView
                            android:id="@+id/onepiece"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"

                            android:text="Wintermelon "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.8"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.322"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck" />

                        <TextView
                            android:id="@+id/onepieceDescription"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/titletxt"
                            android:ellipsize="end"
                            android:maxLines="5"
                            android:text=" The taste is similar to that of cucumber – refreshing and vegetal, with a slight grass-like flavour."
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.953"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.904"
                            tools:ignore="TextSizeCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/berserkCardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    tools:ignore="DuplicateSpeakableTextCheck">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="347dp"
                        android:layout_height="180dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/bleach">

                        <ImageView
                            android:id="@+id/pic3333"
                            android:layout_width="164dp"
                            android:layout_height="164dp"
                            android:background="@color/white"
                            android:contentDescription="@string/asdsa01123"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/matcha"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/imageView3242"
                            android:layout_width="32dp"
                            android:layout_height="29dp"
                            android:contentDescription="@string/wishlist"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.095"
                            app:srcCompat="@drawable/btn_3"
                            app:tint="@color/black"
                            tools:ignore="MissingConstraints,ImageContrastCheck" />

                        <TextView
                            android:id="@+id/priceTxt34"
                            android:layout_width="71dp"
                            android:layout_height="39dp"
                            android:contentDescription="@string/pricetxt"
                            android:text="$50"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.614"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.081"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck,VisualLintOverlap" />

                        <TextView
                            android:id="@+id/titleTx33t5"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"

                            android:text="Matcha"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.839"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.341"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck" />

                        <TextView
                            android:id="@+id/titleTxt23325"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/titletxt"
                            android:ellipsize="end"
                            android:maxLines="5"
                            android:text=" is a finely grounded powder from tea leaves, and when combined with milk and sweetener, it gives a distinctive green colour"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.988"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.904"
                            tools:ignore="TextSizeCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:id="@+id/hunterxhunterCardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    tools:ignore="DuplicateSpeakableTextCheck">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="347dp"
                        android:layout_height="180dp"
                        android:layout_margin="8dp"
                        android:contentDescription="solo leveling description">

                        <ImageView
                            android:id="@+id/hxh2"
                            android:layout_width="164dp"
                            android:layout_height="164dp"
                            android:background="#FDFDFD"
                            android:contentDescription="@string/asdsa01123"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/taro"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/hxhWishlist"
                            android:layout_width="32dp"
                            android:layout_height="29dp"
                            android:contentDescription="@string/wishlist"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.095"
                            app:srcCompat="@drawable/btn_3"
                            app:tint="@color/black"
                            tools:ignore="MissingConstraints,ImageContrastCheck" />

                        <TextView
                            android:id="@+id/hxhPrice"
                            android:layout_width="71dp"
                            android:layout_height="39dp"
                            android:contentDescription="@string/pricetxt"
                            android:text="$69"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.614"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.081"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck,VisualLintOverlap" />


                        <TextView
                            android:id="@+id/hunterxhunter"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"

                            android:text="Taro"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.8"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.322"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck" />

                        <TextView
                            android:id="@+id/hxhDescription"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/titletxt"
                            android:ellipsize="end"
                            android:maxLines="5"
                            android:text="a type of milk tea that is made with taro, a starchy root vegetable that has a sweet, nutty flavour"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.953"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.904"
                            tools:ignore="TextSizeCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>